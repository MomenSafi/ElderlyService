@model List<Appointment>
@{
    Layout = "_LayoutForAdmin";
}
@{
    ViewData["Title"] = "Dashboard";
}
<!-- Blank Start -->
<!-- Sale & Revenue Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-6 col-xl-3">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                <div class="ms-3">
                    <p class="mb-2">Professional Caregiver</p>
                    <h6 class="mb-0">@ViewBag.ProfessionalCaregiver</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                <div class="ms-3">
                    <p class="mb-2">payments</p>
                    <h6 class="mb-0">$@ViewBag.paymentsApprovd</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                <div class="ms-3">
                    <p class="mb-2">User Use Website</p>
                    <h6 class="mb-0">@ViewBag.UserUseWebsite</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                <div class="ms-3">
                    <p class="mb-2">Appointment</p>
                    <h6 class="mb-0">@ViewBag.AppointmentApproved</h6>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Sale & Revenue End -->
<!-- Recent Sales Start -->
<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            Appointment Details
        </div>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-white">
                        <th scope="col">#</th>
                        <th scope="col">Start Time</th>
                        <th scope="col">End Time</th>
                        <th scope="col">Booking Date</th>
                        <th scope="col">Day of week</th>
                        <th scope="col">Status</th>
                        <th scope="col">user name</th>
                        <th scope="col">Caregiver name</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int count = 1;
                    }
                    @foreach (var obj in Model.OrderBy(a=>a.DateTime))
                    {
                        <tr>
                            <td scope="row">@count</td>
                            <td>@obj.StartTime.TimeOfDay</td>
                            <td>@obj.EndTime.TimeOfDay</td>
                            <td>@obj.BookingDate.ToString("yyyy-MM-dd")</td>
                            <td>@obj.DayOfWeek</td>
                            <td>@obj.status</td>
                            <td>@obj.Users.FirstName @obj.Users.LastName</td>
                            <td>@obj.Caregiver.Users.FirstName @obj.Caregiver.Users.LastName</td>
                        </tr>
                        count++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Recent Sales End -->
