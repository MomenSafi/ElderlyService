@model List<Users>
@{
    Layout = "_LayoutForAdmin";
}
@{
    ViewData["Title"] = "Users";
}


<div class="container">

    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary"> Users</h2>
        </div>
        <div class="col-6 text-end">


            <div class="input-group">
                <form method="post">
                    <div class="input-group">
                        <input name="SearchItem" type="search" class="form-control rounded m-1" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
                        <button asp-action="Users" type="submit" class="btn btn-outline-primary m-1" data-mdb-ripple-init>search</button>
                    </div>
                </form>
            </div>



        </div>
    </div>

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone</th>
                    <th scope="col">City</th>
                    <th scope="col">Date Of birth</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int count = 1;
                }
                @foreach (var obj in Model)
                {
                    <tr>
                        <th scope="row">@count</th>
                        <td>@obj.FirstName @obj.LastName</td>
                        <td>@obj.Email</td>
                        <td>@obj.Phone</td>
                        <td>@obj.City</td>
                        <td>@obj.DateOfBirth</td>                        
                    </tr>
                    count++;
                }
            </tbody>
        </table>
    </div>

</div>