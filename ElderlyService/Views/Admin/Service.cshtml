@model List<Service>
@{
    Layout = "_LayoutForAdmin";
}
@{
    ViewData["Title"] = "Service";
}


<div class="container">

    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary"> Services</h2>
        </div>
        <div class="col-6 text-end">


            <div class="input-group">
                <form method="post">
                    <div class="input-group">
                        <input name="SearchItem" type="search" class="form-control rounded m-1" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
                        <button asp-action="Service" type="submit" class="btn btn-outline-primary m-1" data-mdb-ripple-init>search</button>
                    </div>
                </form>
            </div>



        </div>
    </div>
    <a asp-controller="Admin" asp-action="AddService" class="btn btn-primary" style="margin:5px">
        Add Service
    </a>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Action</th>

                </tr>
            </thead>
            <tbody>
                @{
                    int count = 1;
                }
                @foreach (var obj in Model)
                {
                    <tr>
                        <th scope="row">@count</th>
                        <td>@obj.Name</td>
                        <td>@obj.Description</td>
                        <td>
                            <a asp-controller="Admin" asp-action="EditService" asp-route-id="@obj.ServiceId" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                        </td>

                    </tr>
                    count++;
                }
            </tbody>
        </table>
    </div>

</div>


